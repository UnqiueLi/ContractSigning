page {
  background-color: #f5f6f9;
}
/* 背景图片样式 */
.bg-image {
  position: absolute;
  /* 从fixed改为absolute，允许随页面滚动 */
  top: -80rpx;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: -1;
}
/* 固定导航样式 */
.fixed-nav {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  background-color: transparent;
  z-index: 10;
  transition: all 0.3s;
}
.fixed-nav-sticky {
  position: fixed;
  top: 0;
  left: 0;
  background-color: #4B7BEC;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.bg-content {
  width: 100%;
  padding: 0 40rpx 0rpx 40rpx;
  box-sizing: border-box;
  background-color: transparent;
  position: relative;
}
.page-container {
  padding: 0;
  min-height: 100vh;
  position: relative;
  z-index: 1;
}
.top-menu {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
}
.search-box {
  padding: 20rpx 0;
}
.user-info {
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  color: #FFFFFF;
  margin-top: 34rpx;
}
.user-info .user-avatar-box {
  margin-right: 20rpx;
}
.user-info .user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.user-info .user-detail {
  flex: 1;
}
.user-info .user-detail .username {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.user-info .user-detail .seal-count {
  font-size: 26rpx;
  color: #FFFFFF;
}
.user-info .verify-icon {
  position: absolute;
  right: 30rpx;
  top: 100rpx;
}
.stats-box {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.stats-box .stats-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.stats-box .stats-row.bottom-row {
  margin-bottom: 0;
}
.stats-box .stats-item {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.stats-box .stats-item .stats-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}
.stats-box .stats-item .stats-label {
  font-size: 24rpx;
  color: #666;
}
.recent-signed {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 0 40rpx 40rpx;
}
.recent-signed .section-title {
  font-size: 30rpx;
  font-weight: bold;
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 10rpx;
}
.recent-signed .contract-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}
.recent-signed .contract-item:last-child {
  border-bottom: none;
}
.recent-signed .contract-item .contract-icon {
  margin-right: 20rpx;
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.recent-signed .contract-item .contract-info {
  flex: 1;
}
.recent-signed .contract-item .contract-info .contract-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.recent-signed .contract-item .contract-info .contract-tags {
  margin-bottom: 10rpx;
}
.recent-signed .contract-item .contract-info .contract-tags .tag {
  display: inline-block;
  font-size: 22rpx;
  color: #4B7BEC;
  background-color: #ECF1FC;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
}
.recent-signed .contract-item .contract-info .contract-from {
  font-size: 24rpx;
  color: #666;
}
.recent-signed .contract-item .contract-action {
  display: flex;
  align-items: center;
}
.recent-signed .contract-item .contract-action .view-btn {
  font-size: 24rpx;
  color: #4B7BEC;
  background-color: transparent;
  border: 1rpx solid #4B7BEC;
  border-radius: 30rpx;
  padding: 8rpx 20rpx;
  line-height: 1.2;
  margin: 0;
}
